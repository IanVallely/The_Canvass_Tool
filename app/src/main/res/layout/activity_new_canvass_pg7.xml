<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.co.ianvallely.canvasstool.NewCanvassPg7"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <CheckBox
        android:id="@+id/checkBoxNewsletter"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="11pt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="0.356"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"/>

    <CheckBox
        android:id="@+id/checkBoxJoin"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10pt"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxNewsletter"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="0.356"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"/>

    <EditText
        android:id="@+id/editemail"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="email address"
        android:textSize="10pt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxJoin"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="0.356"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"  />

    <TextView
        android:id="@+id/joinInf"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/joinInf"
        android:textSize="7pt"
        app:layout_constraintTop_toBottomOf="@+id/editemail"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="0.356"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10pt"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/joinInf"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="40dp"
        app:layout_constraintHorizontal_bias="0.465"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_submit"
        android:textColor="@color/colorWhite"
        android:textSize="10pt"
        android:background="@color/colorAccent"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3" />




</android.support.constraint.ConstraintLayout>
